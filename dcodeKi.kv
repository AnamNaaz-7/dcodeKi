# Globally set the size of the label text
<Label>
	font_size:28

# Overall layout
<DcodLayout>
	cipher:cipher
	cipher_key:cipher_key
	BoxLayout:
		orientation: 'vertical'
		size: root.width,root.height
		spacing: 20
		padding: 10
		
		# Heading
		Label:
			id: string2
			text: '[b]'+"dcodeKi" + '[/b]' 
			markup:True
		
		# Blank label where the output prints
		Label:
			id: string
			font_size:25
		
		# Input field
		TextInput:
		    hint_text: "Enter Input: "
			foreground_color: 0, 0, 1, 1
			id: cipher
			font_size:25
			multiline: False

		# Input field
		TextInput:
		    hint_text: "Enter Key: "
			foreground_color: 1, 0, 0, 1
			id: cipher_key
			font_size:25
			multiline: False

		# Grid layout for the button (within the box layout)
		GridLayout:
			cols: 5
			Button:
				text: "B64 dcode"
				font_size: 20
				pos_hint: {'center_x':0}
				size_hint: (0.20,None)
				height: 50
				on_press: root.press('b64') # On button press send the value 'b64' for base64 decode
			Button:
				text: "B64 ecode"
				font_size: 20
				size_hint: (0.20,None)
				height: 50
				on_press: root.press('b64e')
			Button:
				text: "ROT13"
				font_size: 20
				size_hint: (0.20,None)
				height: 50
				on_press: root.press('rot13')
			Button:
				text: "ROT47"
				font_size: 20
				size_hint: (0.20,None)
				height: 50
				on_press: root.press('rot47')
			Button:
				text: "B32 dcode"
				font_size: 20
				size_hint: (0.20,None)
				height: 50
				on_press: root.press('b32')
			Button:
				text: "B32 ecode"
				font_size: 20
				size_hint: (0.20,None)
				height: 50
				on_press: root.press('b32e')
			Button:
				text: "Binary Encode"
				font_size: 20
				size_hint: (0.20,None)
				height: 50
				on_press: root.press('t2b')
			Button:
				text: "Binary Decode"
				font_size: 20
				size_hint: (0.20,None)
				height: 50
				on_press: root.press('b2t')
			Button:
				text: "Hex Encode"
				font_size: 20
				size_hint: (0.20,None)
				height: 50
				on_press: root.press('hex_encode')
			Button:
				text: "Hex Decode"
				font_size: 20
				size_hint: (0.20,None)
				height: 50
				on_press: root.press('hex_decode')
			Button:
				text: "XOR Encode"
				font_size: 20
				size_hint: (0.20,None)
				height: 50
				on_press: root.press('text2XOR2text')
			Button:
				text: "Morse Encode"
				font_size: 20
				size_hint: (0.20,None)
				height: 50
				on_press: root.press('morse_encode')
			Button:
				text: "Morse Decode"
				font_size: 20
				size_hint: (0.20,None)
				height: 50
				on_press: root.press('morse_decode')
			Button:
				text: "Vigenere Encode"
				font_size: 20
				size_hint: (0.20,None)
				height: 50
				on_press: root.press('vigenere_encode')
			Button:
				text: "Vigenere Decode"
				font_size: 20
				size_hint: (0.20,None)
				height: 50
				on_press: root.press('vigenere_decode')

		Label:  #Adding Empty Label below buttons for blank space as XOR button was going down into the screen
			size_hint_x: None
			widtht: '200dp'
